    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :repeat %><br />
    <%= select(:event, :repeat, [['Year', 'YEAR'], ['Month', 'MONTH']]) %>
  </div>
  <div class="field">
    <%= f.label :effect_at %><br />
    <%= f.date_select :effect_at %>
  </div>
  <div class="field">
    <%= f.label :img_url %><br />
    <%= f.text_field :img_url %>
  </div>
  <div class="field">
    <%= f.label :visible %><br />
    <%= f.check_box :visible %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

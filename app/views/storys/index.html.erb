<div class="container marketing stories">
  <% @events.each_with_index do |event, index| %>
      <div class="featurette">
        <img class="featurette-image pull-<%= index % 2 == 0 ? "right":"left" %>" src="<%= event.img_url %>">
        <h2 class="featurette-heading">
          <%= event.name %>
          <span class="muted"><%= event.left_to_s %></span>
        </h2>
        <p class="lead"><strong><%= event.effect_at %></strong>&nbsp;&nbsp;<%= event.description %></p>
      </div>
      <hr class="featurette-divider">
  <% end %>
</div><!-- /.container -->

<script>
    $(function() {
        $("#my-story-nav").addClass("active");
    })
</script>
